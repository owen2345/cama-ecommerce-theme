<div class="other-products">
    <div class="container">
        <h3 class="like text-center">Featured Collection</h3>
        <ul id="flexiselDemo3">
            <% current_site.the_post_type('commerce').the_posts.featured.limit(10).decorate.each do |product| %>
                <li><a href="<%= product.the_url %>"><img src="<%= product.the_image_url %>" class="img-responsive" alt="" /></a>
                    <div class="product liked-product simpleCart_shelfItem">
                        <a class="like_name" href="<%= product.the_url %>"><%= product.the_title %></a>
                        <%= product.the_edit_link %>
                        <p><a class="item_add" href="#"><i></i> <span class=" item_price"><%= product.the_price %></span></a></p>
                    </div>
                </li>
            <% end %>
        </ul>
    </div>
</div>
<!-- content-section-ends-here -->
<div class="news-letter">
    <div class="container">
        <div class="row">
            <div class="col-md-6 join">
                <div class="sub-left-right" style="margin-top: 33px;">
                    <%= form_tag(cama_search_path, :method => "get", :class => "") do %>
                        <input type="text" title="Search:" name="q" value="" placeholder="<%= t("camaleon_cms.common.search") %>..." class="search-field" />
                        <input type="submit" value="<%= t("camaleon_cms.common.search") %>" class="" />
                    <% end %>
                </div>
            </div>
            <div class="col-md-6">
                <div class="join">
                    <h6>JOIN OUR MAILING LIST</h6>
                    <div class="sub-left-right">
                        <%= form_tag plugins_cama_subscriber_subscribe_url do %>
                            <input type="text" name="email" value="Enter Your Email Here" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Enter Your Email Here';}" />
                            <input type="submit" value="SUBSCRIBE" />
                        <% end %>
                    </div>
                    <div class="clearfix"> </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="footer">
    <div class="container">
        <div class="footer_top">
            <div class="row">
                <% cama_menu_parse_items(current_site.nav_menus.where(slug: 'eshop_footer_main_menu').first.children).each do |item| %>
                    <div class="col-md-3 span1_of_4">
                        <h4><%= item[:label] %></h4>
                        <ul class="f_nav">
                            <% (item[:children] || []).each do |subitem| %>
                                <li class="<%= 'current_item' if subitem[:current_item] %> <%= 'current_parent_item' if subitem[:current_parent] %>"><a href="<%= subitem[:url] %>"><%= subitem[:label] %></a></li>
                            <% end %>
                        </ul>
                    </div>
                <% end %>
                <%= cama_edit_link(cama_admin_appearances_nav_menus_menu_url(slug: 'eshop_footer_main_menu')) %>
                <div class="clearfix"></div>
            </div>
        </div>
        <div class="cards text-center">
            <img src="<%= theme_asset_url("images/cards.jpg") %>" alt="" />
        </div>
